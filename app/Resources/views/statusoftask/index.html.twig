{% extends 'base.html.twig' %}

{% block body %}
    <h1>StatusOfTask list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for statusOfTask in statusOfTasks %}
            <tr>
                <td><a href="{{ path('statusoftask_show', { 'id': statusOfTask.id }) }}">{{ statusOfTask.id }}</a></td>
                <td>{{ statusOfTask.name }}</td>
                <td>{{ statusOfTask.status }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('statusoftask_show', { 'id': statusOfTask.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('statusoftask_edit', { 'id': statusOfTask.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('statusoftask_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
