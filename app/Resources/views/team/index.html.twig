{% extends 'base.html.twig' %}

{% block body %}
    <h1>Team list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Timestampadd</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td><a href="{{ path('team_show', { 'id': team.id }) }}">{{ team.id }}</a></td>
                <td>{% if team.timestampAdd %}{{ team.timestampAdd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ team.status }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('team_show', { 'id': team.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('team_edit', { 'id': team.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('team_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
